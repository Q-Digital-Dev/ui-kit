{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "~popupMenu": ["./src/shared/ui/modals/popupMenu/popupMenu.options.ts"],
      "~bottomSheet": ["./src/shared/ui/modals/bottomSheet/bottomSheet.options.ts"],
      "~dialog": ["./src/shared/ui/modals/alert/alert.options.ts"],
      "~routes": [
        "./src/app/router/routes.json"
      ],
      "~*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
